def contador(i,f,p):
    if f > i:
        for n in range(i, f + 1, p):
            print(n, end="|")
    else:
        f = f - p
        for n in range(i, f, -p):
            print(n, end="|")


contador(1,10,1)
print(" ")
contador(10,0,2)
print(" ")
inicio = int(input("In√≠cio: "))
fim = int(input("Fim: "))
passo = int(input("Passo: "))
contador(inicio, fim, passo)
