numeros = [[],[]] # [[pares],[ímpares]]
for i in range(7):
    num = int(input(f"Digite o {i+1}º valor: "))
    if num % 2 == 0:
        numeros[0].append(num)
    else:
        numeros[1].append(num)

pares = numeros[0]
pares.sort()
impares = numeros[1]
impares.sort()

print(f"Pares: {pares}")
print(f"Ímpares: {impares}")
